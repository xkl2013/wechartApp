<!--pages/classRoom/index.wxml-->
<view class="study-contaners">
<swiper
  indicator-dots="{{true}}"
  autoplay="{{false}}"
  interval="{{5000}}"
  duration="{{1000}}"
>
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="100%" height="150" />
    </swiper-item>
  </block>
</swiper>
</view>
